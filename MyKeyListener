package instruments;

import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.ArrayList;

public class MyKeyListener implements KeyListener {
	private ArrayList<Integer> keyInstruments = new ArrayList<Integer>();
	public ArrayList<Character> LIST = new ArrayList<Character>();
	
	public MyKeyListener() {
		LIST.add('x');
	}
	
	public void keyPressed(KeyEvent e) {
		LIST.add(e.getKeyChar());
		if(LIST.contains(e.getKeyCode())) {
			keyInstruments.add(e.getKeyCode());
		}
	}
	
	public void keyReleased(KeyEvent e) {
		for(int c = 0; c < keyInstruments.size(); c++) {
			if(keyInstruments.get(c) == e.getKeyCode()) {
				keyInstruments.remove(c);
				return;
			}
		}
	}
	public int getSize(){
		return keyInstruments.size();
	}
	
	public void keyTyped(KeyEvent e) {
	}
	
	public ArrayList<Integer> getKey() {
		return keyInstruments;
	}
}
